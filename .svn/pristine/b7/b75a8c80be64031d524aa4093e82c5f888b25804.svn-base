/*============ Menu HOME DIREITA ==================*/
ul.menuHome {
  background:#30302f;
  height: 250px;
  list-style:none;
 
  a{
    text-decoration: none !important;
    
    li{
      padding:6px 1px 7px 0px;
      .r_row(6, 26);
      font-size:22px;
      font-family: @fontesTitulos;

      &, * {
        color: #ffffff;
      }
      small{
        display:block;
        font-size:11px;
        font-family: Gauntlet Classic, Calibri, Arial;
      }
    }
  }
  
  li.palestrantes {
    .icon(url('../images/home_icon_palestrantes.png'), 60px, 10px);
  }
  li.submission {
    .icon(url('../images/home_icon_submission.png'), 60px, 10px);
  }
  li.programacao {
    .icon(url('../images/home_icon_programacao.png'), 60px, 10px);
  }
  li.cidade {
    .icon(url('../images/home_icon_cidade.png'), 60px, 10px);
    padding-bottom: 9px;
  }
  li.palestrantes:hover {
      background-color:#ab2158;
  }
  li.submission:hover {
      background-color:#b7353f;
  }
  li.programacao:hover {
      background-color:#f59d08;
  }
  li.cidade:hover {
      background-color:#23a749;
  }
}

